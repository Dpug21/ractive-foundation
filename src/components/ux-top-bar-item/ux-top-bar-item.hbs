<li class="{{topBarItemCssClass}}">
	{{#if isDataModel}}
		{{! TODO Use ux-li and ux-anchor, resolve nested scopes. }}
		<a href="{{href}}">{{{label}}}</a>
		{{#if items}}
			{{! Recursively reference the same component, to create the hierarchy of items. }}
			<ux-top-bar-items class="dropdown" items="{{items}}"></ux-top-bar-items>
		{{/if}}
	{{else}}
		{{yield}}
	{{/if}}
</li>
